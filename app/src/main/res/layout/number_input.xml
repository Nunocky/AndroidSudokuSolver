            app:layout_constraintDimensionRatio="w,1:1"
            app:layout_constraintEnd_toEndOf="@+id/tb3"
            app:layout_constraintTop_toBottomOf="@+id/tb3"
            tools:layout_conversion_absoluteHeight="48dp"
            tools:layout_conversion_absoluteWidth="88dp" />

        <ToggleButton
            android:id="@+id/tb9"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginStart="8dp"
            android:background="@drawable/style_toggle_button"
            android:checked="@{viewModel.currentValue == 9}"
            android:text="9"
            android:textOff="9"
            android:textOn="9"
            app:layout_constraintBottom_toTopOf="@+id/tb6"
            app:layout_constraintDimensionRatio="w,1:1"
            app:layout_constraintEnd_toEndOf="parent"
