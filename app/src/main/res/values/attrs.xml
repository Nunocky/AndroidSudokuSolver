<?xml version="1.0" encoding="utf-8"?>
<resources>
    <attr name="borderColor" format="color" />
    <attr name="textColor" format="color" />
    <attr name="updatedTextColor" format="color" />
    <attr name="showCandidates" format="boolean" />
    <attr name="candidateColor" format="color" />

    <declare-styleable name="SudokuBoardView">
        <attr name="borderColor" />
        <attr name="textColor" />
        <attr name="updatedTextColor" />
        <attr name="showCandidates" />
        <attr name="candidateColor" />
    </declare-styleable>

    <declare-styleable name="NumberCellView">
        <attr name="borderColor" />
        <attr name="textColor" />
        <attr name="updatedTextColor" />
        <attr name="showCandidates" />
        <attr name="candidateColor" />

        <attr name="updated" format="boolean" />
        <attr name="topBorderStyle" format="flags" />
        <attr name="rightBorderStyle" format="flags" />
        <attr name="bottomBorderStyle" format="flags" />
        <attr name="leftBorderStyle" format="flags" />

        <attr name="borderStyle">
            <flag name="none" value="0" />
            <flag name="normal" value="1" />
            <flag name="bold" value="0" />
        </attr>
    </declare-styleable>
</resources>