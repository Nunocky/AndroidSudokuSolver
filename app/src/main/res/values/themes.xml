<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.SudokuSolver" parent="Theme.MaterialComponents.DayNight">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="actionMenuTextColor">@color/white</item>
        <item name="colorControlNormal">@color/white</item>

        <item name="actionModeStyle">@style/ActionModeStyle</item>
        <item name="actionBarTheme">@style/ThemeOverlay.AppCompat.Dark.ActionBar</item>

<!--
        <item name="snackbarStyle">@style/CustomSnackbarStyle</item>
        <item name="snackbarButtonStyle">@style/CustomSnackbarButtonStyle</item>
        <item name="snackbarTextViewStyle">@style/CustomSnackbarTextViewStyle</item>
-->
    </style>

    <style name="Theme.SudokuSolver.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="windowActionModeOverlay">true</item>
    </style>

    <style name="Theme.SudokuSolver.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.SudokuSolver.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="ActionModeStyle" parent="@style/Widget.AppCompat.ActionMode">
        <item name="background">@color/purple_500</item>
        <item name="titleTextStyle">@style/ActionModeTitleTextStyle</item>
    </style>

    <style name="ActionModeTitleTextStyle" parent="@style/TextAppearance.AppCompat.Widget.ActionMode.Title">
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="CustomSnackbarStyle" parent="Widget.MaterialComponents.Snackbar">
        <item name="android:background">?attr/colorPrimary</item>
    </style>

    <style name="CustomSnackbarButtonStyle" parent="@style/Widget.MaterialComponents.Button.TextButton.Snackbar">
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="CustomSnackbarTextViewStyle" parent="@style/Widget.MaterialComponents.Snackbar.TextView">
        <item name="textColor">@color/white</item>
    </style>
</resources>